<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="semana3DA.Page2">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="labelStyle" TargetType="Label">
                <Setter Property = "TextColor" Value="Fuchsia" />
                <Setter Property = "FontSize"  Value="20" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
  
    <ContentPage.Content>
        <StackLayout Style="{StaticResource stackLayoutStyle}">
            <Label Text="VENTANA DOS ESTILO: 2"/>
            <Label x:Name="lblDato1"  Style="{StaticResource labelStyle}"></Label>
            <Label x:Name="lblDato2"  Style="{StaticResource labelStyle}"></Label>
            <Button x:Name="btnAbrir" Text="ABRIR VENTANA 3" Clicked="btnAbrir_Clicked"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>